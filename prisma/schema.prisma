generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  ADMIN
  USER
}

enum EVENT_TYPE {
  PLACES
  HIKING
  BICYCLES
  KAYAKS
  WINTER
  CUISINE
  OTHER
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  role          ROLE        @default(USER)
  name          String?
  image         String?
}

model Event {
  id            String      @id @default(cuid())
  name          String?
  description   String?
  type          EVENT_TYPE  @default(PLACES)
}